<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="IpShared.Views.QrCodeWindow"
        Title="QR Code"
        Width="400" Height="450"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/QrCode.png">
    <Grid Margin="20">
        <StackPanel Spacing="15">
            <TextBlock Text="QR Code do Convite" 
                      FontSize="16" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"/>
            
            <Border BorderBrush="Gray" 
                   BorderThickness="2" 
                   CornerRadius="5"
                   Padding="10"
                   HorizontalAlignment="Center">
                <Image x:Name="QrImage" 
                      Width="300" 
                      Height="300"
                      Stretch="Uniform"/>
            </Border>
            
            <Button Content="Fechar" 
                   HorizontalAlignment="Center"
                   Padding="20,5"
                   Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
