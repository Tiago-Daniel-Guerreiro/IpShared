<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:IpShared.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="IpShared.Views.GenerateView"
             x:DataType="vm:GenerateViewModel">
    <Design.DataContext>
        <vm:GenerateViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="15">
        <!-- Secção de Controlo -->
        <StackPanel Grid.Row="0" Spacing="10">
            <TextBlock Text="Codificar convites a partir de um IP" FontSize="13" FontWeight="Bold" Margin="0,0,0,5"/>
            <CheckBox Content="Usar IP Público" IsChecked="{Binding UsePublicIp}"/>
            <CheckBox Content="Usar IP Local (Rede)" IsChecked="{Binding UseLocalIp}" IsVisible="{Binding LocalOptionsEnabled}"/>
            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <TextBlock Text="IP:" VerticalAlignment="Center" FontSize="14" IsVisible="{Binding LocalOptionsEnabled}"/>
                <TextBox Name="FixedIpTextBox" Text="{Binding FixedIp}" Width="150" Watermark="0.0.0.0 - 255.255.255.255" IsVisible="{Binding LocalOptionsEnabled}" GotFocus="OnInputGotFocus" PointerPressed="OnTextBoxAuto"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <TextBlock Text="Porta:" VerticalAlignment="Center" FontSize="14"/>
                <TextBox Name="PortTextBox" Text="{Binding Port}" Width="80" Watermark="0-65535" GotFocus="OnInputGotFocus" PointerPressed="OnTextBoxAuto"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <TextBlock Text="ID Dicionário:" VerticalAlignment="Center" FontSize="14"/>
                <TextBox Text="{Binding DictionaryIdText}" 
                         Width="50" 
                         Watermark="0-15"
                         MaxLength="2" PointerPressed="OnTextBoxAuto"/>
            </StackPanel>
            <Button Content="Codificar" Command="{Binding GenerateInvitesAsync}" Classes="accent"/>
        </StackPanel>

        <!-- Secção de Resultados -->
        <ScrollViewer Grid.Row="1" Margin="0,15,0,0">
            <StackPanel Spacing="15">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" IsVisible="{Binding DefaultInvite, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Default:" FontWeight="Bold" Margin="0,0,10,0" FontSize="14"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DefaultInvite}" IsReadOnly="True" PointerPressed="OnTextBoxAuto"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Base16 (Hex):" FontWeight="Bold" Margin="0,0,10,0" FontSize="14"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Base16Invite}" IsReadOnly="True" PointerPressed="OnTextBoxAuto"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Base62:" FontWeight="Bold" Margin="0,0,10,0" FontSize="14"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Base62Invite}" IsReadOnly="True" PointerPressed="OnTextBoxAuto"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Words:" FontWeight="Bold" Margin="0,0,10,0" FontSize="14"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding HumanInvite}" IsReadOnly="True" PointerPressed="OnTextBoxAuto"/>
                </Grid>

                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="15"
                        IsVisible="{Binding QrCodeImage, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="QR Code do Convite" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        <Border BorderBrush="LightGray" BorderThickness="2" CornerRadius="5" Padding="5" HorizontalAlignment="Center">
                            <Image Source="{Binding QrCodeImage}" Width="250" Height="250"/>
                        </Border>
                        <Button Content="Copiar Base64" Click="OnCopyQrClicked" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Barra de Status -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}" CornerRadius="4" Padding="8" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="14" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
